          "startDate": { "type": "string", "format": "date-time" },
          "endDate": { "type": "string", "format": "date-time" }
        }
      },
      "RegistrationDto": {
        "required": ["email", "firstname", "lastname", "password", "role"],
        "type": "object",
        "properties": {
          "firstname": { "type": "string" },
          "lastname": { "type": "string" },
          "email": { "type": "string" },
          "password": {
            "maxLength": 2147483647,
            "minLength": 8,
            "type": "string"
          },
          "role": { "type": "string", "enum": ["CANDIDATE", "EMPLOYER"] },
          "personalResume": { "type": "string" },
          "phoneNumber": { "type": "string" },
          "age": { "type": "integer", "format": "int32" },
          "photo": { "type": "string" },
          "entrepriseName": { "type": "string" },
          "entrepriseDescription": { "type": "string" },
          "entrepriseLogo": { "type": "string" },
          "entrepriseWebsite": { "type": "string" },
          "entrepriseLocation": { "type": "string" }
        }
      },
      "AuthenticationDto": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": {
            "maxLength": 2147483647,
            "minLength": 8,
            "type": "string"
          }
        }
      },
      "AuthenticationResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string" },
          "token": { "type": "string" },
          "expiredAt": { "type": "string" },
          "user": { "$ref": "#/components/schemas/UserDto" },
          "message": { "type": "string" }
        }
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "role": { "type": "string" },
          "permission": { "type": "string" }
